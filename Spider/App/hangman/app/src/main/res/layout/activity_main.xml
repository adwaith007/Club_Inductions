<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#e1d276">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp">


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="299dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            app:srcCompat="@drawable/post" />

        <ImageView
            android:id="@+id/head"
            android:layout_width="90dp"
            android:layout_height="72dp"
            android:layout_marginLeft="97dp"
            android:layout_marginTop="88dp"
            app:srcCompat="@drawable/head" />

        <ImageView
            android:id="@+id/eye"
            android:layout_width="123dp"
            android:layout_height="77dp"
            android:layout_marginTop="88dp"
            android:layout_marginLeft="80dp"
            app:srcCompat="@drawable/eye" />

        <ImageView
            android:id="@+id/body"
            android:layout_width="243dp"
            android:layout_height="90dp"
            android:layout_marginLeft="21dp"
            android:layout_marginTop="148dp"
            app:srcCompat="@drawable/body" />

        <ImageView
            android:id="@+id/rightarm"
            android:layout_width="116dp"
            android:layout_height="124dp"
            android:layout_marginTop="135dp"
            android:layout_marginLeft="85dp"
            app:srcCompat="@drawable/rightarm" />

        <ImageView
            android:id="@+id/leftarm"
            android:layout_width="140dp"
            android:layout_height="114dp"
            android:layout_marginLeft="76dp"
            android:layout_marginTop="140dp"
            app:srcCompat="@drawable/leftarm" />

        <ImageView
            android:id="@+id/rightleg"
            android:layout_width="107dp"
            android:layout_height="70dp"
            android:layout_marginTop="215dp"
            android:layout_marginLeft="112dp"
            app:srcCompat="@drawable/rightleg1" />

        <ImageView
            android:id="@+id/leftleg"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_marginTop="217dp"
            android:layout_marginLeft="64dp"
            app:srcCompat="@drawable/leftleg1" />


    </RelativeLayout>

    <TextView
        android:id="@+id/dbox"
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="320dp"
        android:text="TextView"
        android:textSize="30dp"
        android:gravity="center"
        android:textColor="#000000"/>

    <EditText
        android:id="@+id/inputchar"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="370dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:maxLength="1"
        android:text=""
        android:backgroundTint="#ec6262"/>

    <Button
        android:id="@+id/submitbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="190dp"
       android:layout_marginTop="370dp"
        android:text="Guess"
        android:background="#ec6262"
        android:textColor="#ffffff"
        android:onClick="guesschar"/>

    <TextView
        android:id="@+id/bestw"
        android:layout_width="114dp"
        android:layout_height="51dp"
        android:layout_marginLeft="5dp"
        android:layout_alignParentTop="true"
        android:textColor="#000000"
        android:gravity="center"
        android:textSize="15dp"
        android:text="Best: 7 wrong(s)" />
    <TextView
        android:id="@+id/currentw"
        android:layout_width="114dp"
        android:layout_height="51dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="30dp"
        android:textColor="#000000"
        android:gravity="center"
        android:textSize="15dp"
        android:text="Now: 0 wrong(s)" />

</RelativeLayout>